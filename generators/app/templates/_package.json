{
  "name": "<%= answers.name %>",
  "description": "<%= answers.description %>",
  "version": "<%= answers.version %>",
  "homepage": "<%= answers.repositoryUrl %>",
  "bugs": "<%= answers.repositoryUrl %>/issues",
  "main": "lib/index.js",
  "author": {
    "name": "<%= answers.authorName %>",
    "email": "<%= answers.authorEmail %>"
  },
  "repository": {
    "type": "git",
    "url": "<%= answers.repositoryUrl %>"
  },
  "dependencies": {
    <% if (answers.swf) { %>
    "aws-sdk": "*",
    "aws-swf": "*",
    "usher": "*",
    <% } %>
    <% if (answers.publicApp || answers.privateApp) { %>
    "baucis": "*",
    "baucis-vivify": "*",
    "body-parser": "*",
    "compression": "*",
    "cors": "*",
    "express": "*",
    "express-validator": "*",
    "helmet": "*",
    "passport": "*",
    "passport-http-bearer": "*",
    "request": "*",
    "url": "*",
    "winston-request-logger": "*",
    <% } %>
    <% if (answers.mongo) { %>
    "mongoose": "*",
    "mongoose-timestamp": "*",
    <% } %>
    "analytics-node": "*",
    "async": "*",
    "colors": "*",
    "di": "2.0.0-pre-14",
    "discover-client": "*",
    "errorhandler": "*",
    "events": "*",
    "krypt": "*",
    "lodash": "*",
    "moment": "*",
    "nconf": "*",
    "util": "*",
    "winston": "*",
    "winston-gelfling": "*"
  },
  "devDependencies": {
    "gulp": "*",
    "gulp-jshint": "*",
    "gulp-load-plugins": "*",
    "gulp-plumber": "*",
    "gulp-util": "*",
    "jshint-stylish": "*",
    "minimist": "*"
  }
}
